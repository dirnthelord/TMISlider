    <script type="text/javascript">

        window.onload = function () {
            var images = $(".tile-image");
            var maxWidth = $(".img-wrapper").eq(0).width();
            var maxHeight = $(".img-wrapper").eq(0).height();


            $(document).ready(function () {
                for (var i = 0; i < images.length; i++) {

                    centerImage(images[i]);

                }
            });

            function centerImage(img) {

                var y;
                var x;

                var imgHeight = img.height;
                var imgWidth = img.width;
 
                x = Math.round((maxWidth - imgWidth) / 2);
                y = Math.round((maxHeight - imgHeight) / 3);


                $(img).css({
                    'position': 'absolute',
                    'left': x,
                    'top': y + 10
                });

            }
        };

        function log(t) {
            $("#log").append("<p>" + t + "</p>");
